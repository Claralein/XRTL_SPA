#: import utils kivy.utils
#:import md_icons kivymd.icon_definitions.md_icons

Screen:
    RelativeLayout:
        size: root.width, root.height
        orientation: 'vertical'

        Label:
            text: "Server Settings"
            font_size:32
            size_hint:(0.1,0.1)
            pos_hint: {'center_x': 0.5, 'y': 0.9}

        Switch:
            id: switch
            size_hint:(0.1,0.1)
            pos_hint: {'x': 0.7, 'y': 0.9}   
          
        Label:
            markup: True
            font_size:18
            size_hint:(0.1,0.1)
            pos_hint: {'x': 0.85, 'y': 0.9}
            text: 'Server is [color=#6aa84f]online[/color]' if switch.active else 'Server is [color=#cc0000]offline[/color]'

        RelativeLayout:
            CanvasBox:
                size_hint:(0.65,0.18)
                pos_hint: {'x': 0.03, 'y': 0.72}

            Label:
                font_size:18
                size_hint:(0.1,0.1)
                pos_hint: {'x': 0.1, 'y': 0.80}
                text: "To reset all commponents"
                color: utils.get_color_from_hex('01bd7d')
            
            MDRaisedButton:
                md_bg_color: utils.get_color_from_hex('01bd7d')
                font_size:18
                size_hint:(0.21,0.07)
                pos_hint: {'x': 0.05, 'y': 0.75}
                text:"Initialization"
            
            Label:
                font_size:18
                size_hint:(0.1,0.1)
                pos_hint: {'x': 0.5, 'y': 0.80}
                text: "To reset all commponents"
                color: utils.get_color_from_hex('01bd7d')       


            MDRaisedButton:
                text: "Reset"
                font_size:18
                md_bg_color: utils.get_color_from_hex('01bd7d')
                size_hint:(0.2,0.07)
                pos_hint: {'x': 0.46, 'y': 0.75}   

        RelativeLayout:
            spacing:100

            Label:
                text: "Commandos to the server:"
                font_size:24
                color: utils.get_color_from_hex('01bd7d')
                size_hint:(0.1,0.05)
                pos_hint: {'x': 0.17, 'y': 0.6}

            MDTextField:
                multiline: False
                font_size:18
                size_hint_x:.5
                pos_hint: {'x': 0.05, 'y': 0.5}
                helper_text_mode: "persistent"

                hint_text: "Type in a server command ..."
                hint_text_color_focus: utils.get_color_from_hex('4dd0a4')
                
                line_color_normal: utils.get_color_from_hex('01bd7d')
                line_color_focus: utils.get_color_from_hex('4dd0a4')
                
                icon_right: "arrow-right"
                icon_right_color_normal: utils.get_color_from_hex('01bd7d')
                icon_right_color_focus: utils.get_color_from_hex('4dd0a4')

            
        RelativeLayout:
            padding:10

            Label:
                text: "Socket log:"
                size_hint:(0.1,0.05)
                pos_hint: {'x': 0.05, 'y': 0.45}
                font_size:24
                color: utils.get_color_from_hex('01bd7d')

            ScrollView:
                size_hint:(0.6,0.4)
                pos_hint: {'x': 0.05, 'y': 0.05}
                do_scroll_x: False
                do_scroll_y: True

                Label:
                    size_hint_y: None
                    height: self.texture_size[1]
                    text_size: self.width, None
                    padding: 10, 10
                    text:
                        'really some amazing textcidmlllllllllc\n' * 100

        RelativeLayout:
            padding:10

            Label:
                text: "User log:"
                size_hint:(0.1,0.05)
                pos_hint: {'x': 0.65, 'y': 0.45}
                font_size:24
                color: utils.get_color_from_hex('01bd7d')

            ScrollView:
                size_hint:(0.3,0.1)
                pos_hint: {'x': 0.65, 'y': 0.35}
                do_scroll_x: False
                do_scroll_y: True

                Label:
                    size_hint_y: None
                    height: self.texture_size[1]
                    text_size: self.width, None
                    padding: 10, 10
                    text:
                        'reUsernameekmckdmckc\n' * 100

            Label:
                text: "Component log:"
                size_hint:(0.1,0.05)
                pos_hint: {'x': 0.685, 'y': 0.25}
                font_size:24
                color: utils.get_color_from_hex('01bd7d')

            ScrollView:
                size_hint:(0.3,0.2)
                pos_hint: {'x': 0.65, 'y': 0.05}
                do_scroll_x: False
                do_scroll_y: True

                Label:
                    size_hint_y: None
                    height: self.texture_size[1]
                    text_size: self.width, None
                    padding: 10, 10
                    text:
                        'Compoentskcbnkjdnc\n' * 100


<RoundedButton@Button>
    background_color: (0,0,0,0)
    background_normal:''
    canvas.before:
        Color:
            rgba: utils.get_color_from_hex('01bd7d')
        RoundedRectangle:
            size:self.size
            pos: self.pos
            radius:[20]

<CanvasBox@Widget>
    canvas:
        Color: 
            rgba: 1,1,1,1
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: 40, 40, 40, 40